<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%-include('../includes/navigation.ejs')%>
  <main>
    <form class="product-form" action="/admin/<%if(editMode==="true"){%>edit-product<%}else{%>add-product<%}%>" method="POST">
      <div class="class form-control">
        <label for="title">Title</label>
        <input  type="text" name="title" value="<%if(editMode==="true"){%><%=product.title%><%}%>" id="title" />
        <label for="cost">Cost</label>
        <input type="text" name="cost" value="<%if(editMode==="true"){%><%=product.cost%><%}%>" id="cost" />
        <label for="Image">Image</label>
        <input type="text" name="image" value="<%if(editMode==="true"){%><%=product.image%><%}%>" id="Image" />
        <label for="description">description</label>
        <textarea name="description" id="description"><%if(editMode==="true"){%><%=product.description%><%}%></textarea>
      </div>
        <input  type="hidden"  name="id" value="<%if(editMode==="true"){%><%=product.id%><%}else{%><%null%><%}%>"  
        />

      
      <button type="submit"><%if(editMode==="true"){%>Update Product<%}else{%>Add Product<%}%></button>
    </form>
  </main>
  <%-include('../includes/end.ejs')%>